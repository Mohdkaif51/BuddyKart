<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="4dp"
    android:elevation="1dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    app:strokeColor="@color/secondaryWhite">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/HomeimageContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/secondaryWhite"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/homeproductImage"
            android:layout_width="0dp"
            android:layout_height="160dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Wishlist button after image so it's drawn on top -->
        <ImageButton
            android:id="@+id/wishlist"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:elevation="8dp"
            android:padding="8dp"
            android:src="@drawable/fav"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <!-- Product Title -->
        <TextView
            android:id="@+id/homeproductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            android:paddingTop="6dp"
            android:text="@string/product_name"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeproductImage" />

        <TextView
            android:id="@+id/desctxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="@+id/homeproductImage"
            app:layout_constraintStart_toStartOf="@+id/homeproductImage"
            app:layout_constraintTop_toBottomOf="@+id/homeproductName" />


        <!-- Price + Add Button Row -->
        <LinearLayout
            android:id="@+id/priceContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/desctxt"
            app:layout_constraintStart_toStartOf="@+id/desctxt"
            app:layout_constraintTop_toBottomOf="@+id/desctxt">

            <!-- Discounted Price (Final Price) -->
            <TextView
                android:id="@+id/homeproductdisPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="6dp"
                android:text="product Price"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Original Price (Strikethrough) -->
            <!--            <TextView-->
            <!--                android:id="@+id/homeproductPrice"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="â‚¹1299"-->
            <!--                android:textColor="@color/gray"-->
            <!--                android:textSize="12sp"-->
            <!--                android:paddingEnd="8dp" />-->

            <!-- Flexible Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Add to Cart Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/homeAddButton"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:backgroundTint="@color/primaryYellow"
                android:text="@string/add"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="16dp"
                tools:ignore="SmallSp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
