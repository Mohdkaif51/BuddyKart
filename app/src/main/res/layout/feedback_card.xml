<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="12dp"
    android:background="@drawable/rating_box_bg"

    app:cardCornerRadius="4dp"

    app:strokeWidth="1dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Section: Name, Date -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvReviewerName"
                    android:text="John Doe"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvVerifiedBadge"
                    android:text="âœ“ Verified Purchase"
                    android:textSize="11sp"
                    android:textColor="#4CAF50"
                    android:visibility="gone"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvReviewDate"
                android:text="25 Sep 2025"
                android:textSize="12sp"
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Rating Section -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4"
                android:stepSize="0.5"
                android:isIndicator="true"
                android:progressTint="@color/primaryYellow"
                android:progressBackgroundTint="#E0E0E0"
                android:secondaryProgressTint="@color/primaryYellow"/>


        </LinearLayout>

        <!-- Review Title (Optional) -->
        <TextView
            android:id="@+id/tvReviewTitle"
            android:text="Excellent Product!"
            android:textSize="14sp"
            android:textColor="#1A1A1A"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Review Description -->
        <TextView
            android:id="@+id/tvReviewDesc"
            android:text="nice"
            android:textSize="14sp"
            android:textColor="#4A4A4A"
            android:lineSpacingExtra="2dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- See More Button -->
        <TextView
            android:id="@+id/seeMoreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:text="Read More"
            android:textColor="@color/primaryYellow"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>



    </LinearLayout>

</com.google.android.material.card.MaterialCardView>