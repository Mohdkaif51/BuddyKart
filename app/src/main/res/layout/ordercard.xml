<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E8EAED">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:background="@android:color/white">

        <!-- Header Section Background -->
        <View
            android:id="@+id/headerBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#F8F9FA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/txtOrderDate"/>

        <!-- Order ID -->
        <TextView
            android:id="@+id/txtOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order ID: #4"
            android:textColor="#202124"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:paddingTop="16dp"
            android:paddingStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Status -->
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/status_bg"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:text="Pending"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:textAllCaps="true"
            android:letterSpacing="0.03"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/txtOrderId"
            app:layout_constraintBottom_toBottomOf="@id/txtOrderId"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Order Date -->
        <TextView
            android:id="@+id/txtOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2025-09-24"
            android:textColor="#5F6368"
            android:textSize="13sp"
            android:paddingTop="6dp"
            android:paddingBottom="16dp"
            android:paddingStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtOrderId"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Customer Section Label -->
        <TextView
            android:id="@+id/labelCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUSTOMER"
            android:textColor="#5F6368"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtOrderDate"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Customer Name -->
        <TextView
            android:id="@+id/txtCustomerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faizan Ahmad"
            android:textColor="#202124"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/labelCustomer"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Shipping Address -->
        <TextView
            android:id="@+id/txtShippingAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="triveni Nagar, Lgshsnamak, Uttar Pradesh, 555555, India"
            android:textColor="#5F6368"
            android:textSize="13sp"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginTop="6dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/txtCustomerName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#E8EAED"
            app:layout_constraintTop_toBottomOf="@id/txtShippingAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Payment Method Label -->
        <TextView
            android:id="@+id/labelPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAYMENT METHOD"
            android:textColor="#5F6368"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Payment Method -->
        <TextView
            android:id="@+id/txtPaymentMethod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Payment: Cash On Delivery"
            android:textColor="#202124"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"

            app:layout_constraintTop_toBottomOf="@id/labelPayment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline"/>

        <!-- Guideline for vertical split -->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.68" />

        <!-- Total Amount Label -->
        <TextView
            android:id="@+id/labelTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL AMOUNT"
            android:textColor="#5F6368"
            android:textSize="11sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/labelPayment"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Total Amount -->
        <TextView
            android:id="@+id/txtTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $105.00"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/labelTotal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>